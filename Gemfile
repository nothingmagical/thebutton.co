source 'https://rubygems.org'

# Latest Ruby
ruby '2.1.0'

# Web server
gem 'puma'

# Simple HTTP
gem 'sinatra'

# Faster ERB
gem 'erubis'

# Use the right host
gem 'rack-canonical-host'

# Asset pipeline
gem 'sprockets'

# Data
gem 'redis'

# Utilities
gem 'rake', require: false

# Simple HTTP
gem 'httparty', require: false

# Stylesheets
gem 'sass'
gem 'sprockets-sass'
gem 'bourbon'
gem 'grater'

group :development do
  # Reloading in development
  gem 'shotgun'
end
